# Server Configuration
NODE_ENV=development
PORT=5000

# PostgreSQL Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mds
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mds
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Authentication
JWT_SECRET=change-this-to-a-random-secret-key-in-production
JWT_EXPIRES_IN=24h

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800

# CORS
CORS_ORIGIN=http://localhost:3000

# File Watcher (CAM Integration)
WATCH_CAM_OUTPUT=true
CAM_OUTPUT_PATH=./cam-output
CAM_UPLOAD_PATH=./cam-upload

# SMB Shares für Maschinen (später)
SMB_SHARE_PATH=/mds-shares
